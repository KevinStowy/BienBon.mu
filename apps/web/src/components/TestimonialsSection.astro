---
import type { Locale } from '../i18n/utils';
import { t } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const testimonials = [
  {
    quoteKey: 'home.testimonial1Quote',
    nameKey: 'home.testimonial1Name',
    roleKey: 'home.testimonial1Role',
    locationKey: 'home.testimonial1Location',
    initials: 'MT',
    bgColor: 'bg-green-100',
    textColor: 'text-green-700',
  },
  {
    quoteKey: 'home.testimonial2Quote',
    nameKey: 'home.testimonial2Name',
    roleKey: 'home.testimonial2Role',
    locationKey: 'home.testimonial2Location',
    initials: 'CR',
    bgColor: 'bg-orange-100',
    textColor: 'text-orange-600',
  },
];
---

<!-- Testimonials section â€” can be hidden pre-launch by removing from homepage -->
<section class="py-16 sm:py-24 bg-white" aria-labelledby="testimonials-heading">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 id="testimonials-heading" class="text-3xl sm:text-4xl font-extrabold text-neutral-900">
        {t(locale, 'home.testimonialsTitle')}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {testimonials.map((testimonial) => (
        <blockquote class="bg-neutral-50 rounded-xl p-8 relative">
          <div class="text-5xl text-green-200 font-serif leading-none mb-4 absolute top-4 left-6" aria-hidden="true">"</div>
          <p class="text-neutral-700 italic leading-relaxed pt-6 text-sm sm:text-base">
            {t(locale, testimonial.quoteKey)}
          </p>
          <footer class="mt-6 flex items-center gap-3">
            <div
              class={`w-12 h-12 rounded-full flex items-center justify-center font-bold text-sm ${testimonial.bgColor} ${testimonial.textColor}`}
              aria-hidden="true"
            >
              {testimonial.initials}
            </div>
            <div>
              <cite class="text-sm font-bold text-neutral-900 not-italic block">
                {t(locale, testimonial.nameKey)}
              </cite>
              <span class="text-xs text-neutral-500">
                {t(locale, testimonial.roleKey)}, {t(locale, testimonial.locationKey)}
              </span>
            </div>
          </footer>
        </blockquote>
      ))}
    </div>
  </div>
</section>
