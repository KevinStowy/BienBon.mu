---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { t } from '../../i18n/utils';

const locale = 'en' as const;

const benefits = [
  { icon: '&#128682;', titleKey: 'partner.benefit1', descKey: 'partner.benefit1Desc', color: 'bg-green-100 text-green-700' },
  { icon: '&#128101;', titleKey: 'partner.benefit2', descKey: 'partner.benefit2Desc', color: 'bg-orange-100 text-orange-600' },
  { icon: '&#128176;', titleKey: 'partner.benefit3', descKey: 'partner.benefit3Desc', color: 'bg-green-100 text-green-700' },
  { icon: '&#127757;', titleKey: 'partner.benefit4', descKey: 'partner.benefit4Desc', color: 'bg-orange-100 text-orange-600' },
];
---

<BaseLayout
  title="Become a BienBon partner â€” Reduce waste, increase revenue"
  description="Join the BienBon network and sell your unsold items as surprise baskets at reduced prices. Zero unsold stock, new customers, additional revenue."
  locale={locale}
  canonicalPath="/devenir-partenaire"
>
  <Header locale={locale} currentPath="/en/become-partner" />
  <main id="main-content">
    <section class="bg-gradient-to-br from-orange-100 to-neutral-50 py-14 sm:py-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-neutral-900">
          {t(locale, 'partner.title')}
        </h1>
        <p class="mt-4 text-lg text-neutral-600 max-w-xl mx-auto">
          {t(locale, 'partner.subtitle')}
        </p>
      </div>
    </section>

    <section class="py-16 sm:py-20 bg-white" aria-labelledby="benefits-heading">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 id="benefits-heading" class="text-2xl sm:text-3xl font-extrabold text-neutral-900 text-center mb-12">
          Why join BienBon?
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          {benefits.map((benefit) => (
            <article class="bg-neutral-50 rounded-xl p-6 text-center">
              <div class={`w-14 h-14 rounded-xl flex items-center justify-center text-2xl mx-auto mb-4 ${benefit.color}`}>
                <span set:html={benefit.icon} aria-hidden="true"></span>
              </div>
              <h3 class="text-base font-extrabold text-neutral-900 mb-2">{t(locale, benefit.titleKey)}</h3>
              <p class="text-sm text-neutral-600 leading-relaxed">{t(locale, benefit.descKey)}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="py-16 sm:py-20 bg-white" aria-labelledby="contact-heading">
      <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 id="contact-heading" class="text-2xl sm:text-3xl font-extrabold text-neutral-900 mb-4">
          {t(locale, 'partner.contactTitle')}
        </h2>
        <p class="text-neutral-600 mb-8">{t(locale, 'partner.contactDesc')}</p>
        <div class="bg-green-50 border border-green-200 rounded-xl p-8">
          <a
            href={`mailto:${t(locale, 'partner.contactEmail')}`}
            class="text-xl font-extrabold text-green-700 hover:text-green-900 transition-colors underline underline-offset-4"
          >
            {t(locale, 'partner.contactEmail')}
          </a>
          <p class="mt-4 text-sm text-neutral-500">We respond within 48 business hours.</p>
        </div>
      </div>
    </section>
  </main>
  <Footer locale={locale} />
</BaseLayout>
