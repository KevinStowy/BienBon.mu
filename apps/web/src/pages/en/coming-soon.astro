---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t } from '../../i18n/utils';

const locale = 'en' as const;
---

<BaseLayout
  title="Coming Soon — BienBon"
  description="BienBon, the first anti-food waste marketplace in Mauritius, is coming soon. Sign up to be notified at launch."
  locale={locale}
  canonicalPath="/coming-soon"
>
  <main id="main-content" class="min-h-screen flex flex-col items-center justify-center px-4 py-16 bg-gradient-to-br from-green-100 via-neutral-50 to-orange-100">
    <a href="/en" aria-label="BienBon">
      <img src="/images/logos/logo-principal.png" alt="BienBon" class="h-16 w-auto mb-8" />
    </a>

    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-neutral-900 text-center mb-4">
      {t(locale, 'comingSoon.title')}
    </h1>
    <p class="text-lg text-neutral-600 text-center max-w-lg mb-8">
      {t(locale, 'comingSoon.subtitle')}
    </p>

    <img
      src="/images/illustrations/coming-soon.png"
      alt="BienBon is coming soon"
      class="w-64 sm:w-80 h-auto mb-10"
      loading="eager"
    />

    <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-6 sm:p-8">
      <p class="text-sm font-bold text-neutral-700 mb-4">
        {t(locale, 'comingSoon.newsletterTitle')}
      </p>
      <form class="space-y-4" action="#" method="POST">
        <div>
          <label for="coming-soon-email-en" class="sr-only">{t(locale, 'comingSoon.emailPlaceholder')}</label>
          <input
            id="coming-soon-email-en"
            type="email"
            name="email"
            placeholder={t(locale, 'comingSoon.emailPlaceholder')}
            required
            class="w-full px-4 py-3 rounded-lg border-2 border-neutral-200 text-sm text-neutral-900 placeholder-neutral-400 focus:outline-none focus:border-green-500 focus:ring-2 focus:ring-green-500/20"
            aria-required="true"
          />
        </div>
        <div class="flex items-start gap-3">
          <input
            id="coming-soon-consent-en"
            type="checkbox"
            name="consent"
            required
            class="mt-1 w-5 h-5 rounded border-2 border-neutral-200 text-green-700 focus:ring-green-500 min-w-[20px]"
            aria-required="true"
          />
          <label for="coming-soon-consent-en" class="text-xs text-neutral-600 leading-relaxed">
            {t(locale, 'comingSoon.consent')}{' '}
            <a href="/en/privacy-policy" class="text-green-700 font-semibold hover:underline">
              {t(locale, 'comingSoon.privacyLink')}
            </a>
          </label>
        </div>
        <button
          type="submit"
          class="w-full px-6 py-3 rounded-lg bg-green-700 text-white font-bold text-sm hover:bg-green-900 transition-colors min-h-[48px]"
        >
          {t(locale, 'comingSoon.submit')}
        </button>
      </form>
    </div>

    <div class="mt-8">
      <button type="button" disabled class="px-6 py-3 rounded-lg bg-neutral-200 text-neutral-400 font-bold text-sm cursor-not-allowed min-h-[48px]" aria-disabled="true">
        {t(locale, 'comingSoon.comingSoonButton')}
      </button>
    </div>

    <div class="mt-8 text-center">
      <p class="text-sm font-bold text-neutral-500 mb-3">{t(locale, 'comingSoon.followUs')}</p>
      <div class="flex justify-center gap-4">
        <a href="https://www.facebook.com/bienbon.mu" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white shadow flex items-center justify-center text-neutral-500 hover:text-green-700 transition-colors" aria-label="Facebook">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
        </a>
        <a href="https://www.instagram.com/bienbon.mu" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white shadow flex items-center justify-center text-neutral-500 hover:text-green-700 transition-colors" aria-label="Instagram">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
        </a>
      </div>
    </div>

    <p class="mt-12 text-xs text-neutral-400">© 2026 BienBon Ltd. Port-Louis, Mauritius</p>
  </main>
</BaseLayout>
