---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Icon from '../components/Icon.astro';
import { t } from '../i18n/utils';

const locale = 'fr' as const;
---

<BaseLayout
  title="Page introuvable — BienBon"
  description="La page que vous cherchez semble avoir disparu."
  locale={locale}
  canonicalPath="/404"
>
  <Header locale={locale} currentPath="/404" />
  <main id="main-content">
    <section class="min-h-[60vh] flex items-center justify-center py-20 px-4">
      <div class="text-center max-w-md">
        <!-- Illustration -->
        <img src="/images/illustrations/empty-state-404.png" alt="Page non trouvée" class="w-64 h-64 mx-auto mb-6" />

        <!-- 404 -->
        <p class="text-7xl font-black text-green-700 leading-none mb-4" aria-hidden="true">404</p>

        <h1 class="text-2xl sm:text-3xl font-extrabold text-neutral-900 mb-4">
          {t(locale, 'notFound.title')}
        </h1>
        <p class="text-neutral-600 mb-8 leading-relaxed">
          {t(locale, 'notFound.description')}
        </p>

        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a
            href="/"
            class="inline-flex items-center justify-center gap-2 px-6 py-4 rounded-lg bg-green-700 text-white font-bold hover:bg-green-900 transition-colors min-h-[52px]"
          >
            <Icon name="ArrowLeft" size={20} />
            {t(locale, 'notFound.backHome')}
          </a>
          <a
            href="#"
            class="inline-flex items-center justify-center px-6 py-4 rounded-lg border-2 border-green-700 text-green-700 font-bold hover:bg-green-700 hover:text-white transition-colors min-h-[52px]"
          >
            {t(locale, 'notFound.discoverBaskets')}
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer locale={locale} />
</BaseLayout>
